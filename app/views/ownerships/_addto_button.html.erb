<% if current_user.addto?(item) %>
  <%= form_tag(ownership_path(item.id), method: :delete) do %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= hidden_field_tag :type, 'Addto' %>
    <%= submit_tag '本棚から削除する', class: 'btn_red' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :item_isbn, item.isbn %>
    <%= hidden_field_tag :type, 'Addto' %>
    <%= submit_tag '本棚に追加する', class: '' %>
  <% end %>
<% end %>
